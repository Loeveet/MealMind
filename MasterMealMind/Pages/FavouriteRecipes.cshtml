@page
@using MasterMealMind.Web.Helpers;
@model MasterMealMind.Web.Pages.FavouriteRecipesModel
@{

}
<div class="container">
	<div class="text-start">
		<div class="row">
			<div class="form-group col-md-10">
				<h4>Favoritrecept</h4>
			</div>
		</div>

		@if (Model.FavouriteRecipes != null)
		{
			<p>@Model.FavouriteRecipes.Count()</p>
			<div class="container">
				<div class="row">
					<div class="col">
						<div class="table-responsive">
							<table class="table table-striped">
								<thead>
									<tr>
										<th></th>
										<th class="col-md-3 col-sm-3">Titel</th>
										<th class="col-md-4 col-sm-4">Göra så här</th>
										<th class="col-md-3 col-sm-3">Ingredienser</th>
										<th class="col-md-2 col-sm-2">@string.Empty</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var recipe in Model.FavouriteRecipes)
									{
										<tr>
											<td>
												<div class="form-group">
													<form method="post" asp-page-handler="RemoveFromFavourites">
														<input type="hidden" name="recipeId" value="@recipe.Id" />
														<button class="btn-sm btn-danger" type="submit">Remove</button>
													</form>
												</div>
											</td>
											<td class="col-md-3 col-sm-3">
												<a asp-page="/RecipeDetailsPage" asp-route-recipeId="@recipe.Id" asp-route-source="favourites">
													@recipe.Title
												</a>
											</td>
											<td class="col-md-3 col-sm-3">
												@{
													var stepCounter = 1;
												}
												@if (!string.IsNullOrEmpty(recipe.Description))
												{
													foreach (var desc in recipe.Description.Split('|'))
													{
														<div class="form-check" onclick="toggleCheckbox('@($"step{recipe.Id}_{stepCounter}")')">
															<input class="form-check-input" type="checkbox" id="@($"step{recipe.Id}_{stepCounter}")" name="step">
															<label class="form-check-label" for="@($"step{recipe.Id}_{stepCounter}")">
																@desc.Trim()
															</label>
														</div>
														stepCounter++;
													}
												}
											</td>
											<td class="col-md-3 col-sm-3">
												@if (!string.IsNullOrEmpty(recipe.Ingredients))
												{
													foreach (var ingredient in recipe.Ingredients.Split('|'))
													{
														<div>@Html.Raw(IngredientFormatter.FormatingIngredient(ingredient))</div>
													}
												}
											</td>
											<td class="col-md-2 col-sm-2">
												<img src="@recipe.ImgURL" height="150" alt="Bild på @recipe.Title">
											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div>
